{
  "name": "Minecraft Lang",
  "scopeName": "source.mc-lang",
  "patterns": [
    {
      "include": "#comment"
    },
    {
      "include": "#keys"
    },
    {
      "include": "#values"
    }
  ],
  "repository": {
    "comment": {
      "begin": "#",
      "end": "$",
      "name": "comment.line.number-sign.mc-lang"
    },
    "keys": {
      "name": "entity.other.attribute-name.keys.mc-lang",
      "begin": "^",
      "end": "[A-Za-z0-9](?==)|(?=#)",
      "patterns": [
        {
          "match": "[A-Za-z0-9]+:[A-Za-z0-9]+(?=\\.)",
          "name": "variable.other.readwrite.mc-lang"
        }
      ]
    },
    "values": {
      "begin": "\\=",
      "end": "$|(?=#)",
      "name": "keyword.operator.new.mc-lang",
      "patterns": [
        {
          "begin": "<",
          "end": ">|$",
          "name": "entity.name.function.values.mc-lang"
        },
        {
          "begin": ":_",
          "end": ":|$",
          "name": "constant.character.escape"
        },
        {
          "begin": "§0",
          "end": "(?=(§[0-9a-gr]{1}|$))",
          "name": "entity.name.function.format.0.mc-lang"
        },
        {
          "begin": "§1",
          "end": "(?=(§[0-9a-gr]{1}|$))",
          "name": "entity.name.function.format.1.mc-lang"
        },
        {
          "begin": "§2",
          "end": "(?=(§[0-9a-gr]{1}|$))",
          "name": "entity.name.function.format.2.mc-lang"
        },
        {
          "begin": "§3",
          "end": "(?=(§[0-9a-gr]{1}|$))",
          "name": "entity.name.function.format.3.mc-lang"
        },
        {
          "begin": "§4",
          "end": "(?=(§[0-9a-gr]{1}|$))",
          "name": "entity.name.function.format.4.mc-lang"
        },
        {
          "match": "%([1-9]+\\$)?(\\d)*(\\.(\\d)+)?[dcbsfexh]",
          "name": "entity.name.tag.values.mc-lang"
        },
        {
          "match": ".",
          "name": "string.mc-lang"
        }
      ]
    }
  }
}