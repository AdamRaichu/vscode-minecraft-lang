{
  "name": "Minecraft Lang",
  "patterns": [
    {
      "include": "#comment"
    },
    {
      "include": "#keys"
    },
    {
      "include": "#values"
    }
  ],
  "repository": {
    "comment": {
      "match": "^#(.*)$|^//(.*)$",
      "name": "mc-lang.comment"
    },
    "keys": {
      "name": "mc-lang.key",
      "match": "^[^=]*(?==)"
    },
    "values": {
      "begin": "\\=",
      "end": "$",
      "name": "variable.parameter.values.lang",
      "patterns": [
        {
          "begin": "<",
          "end": ">",
          "name": "entity.name.function.values.lang"
        },
        {
          "match": "ยง[0-9a-fk-or]{1}",
          "name": "mc-lang.style-code"
        },
        {
          "match": "%([1-9]+\\$)?(\\d)*(\\.(\\d)+)?[dcbsfexh]",
          "name": "entity.name.tag.values.lang"
        },
        {
          "match": ".",
          "name": "entity.other.inherited-class.values.lang"
        }
      ]
    }
  },
  "scopeName": "source.mc-lang"
}