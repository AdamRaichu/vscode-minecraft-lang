{
  "name": "Minecraft Lang",
  "scopeName": "source.lang",
  "patterns": [
    {
      "include": "#comment"
    },
    {
      "include": "#keys"
    },
    {
      "include": "#values"
    }
  ],
  "repository": {
    "comment": {
      "begin": "#",
      "end": "$",
      "name": "comment.line.number-sign.lang"
    },
    "keys": {
      "name": "entity.other.attribute-name.keys.lang",
      "begin": "^",
      "end": "[A-Za-z0-9](?==)|(?=#)",
      "patterns": [
        {
          "match": "[A-Za-z0-9]+:[A-Za-z0-9]+(?=\\.)",
          "name": "variable.other.readwrite.lang"
        }
      ]
    },
