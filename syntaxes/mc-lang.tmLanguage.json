{
  "name": "Minecraft Lang",
  "scopeName": "source.mc-lang",
  "patterns": [
    {
      "include": "#comment"
    },
    {
      "include": "#keys"
    },
    {
      "include": "#values"
    }
  ],
  "repository": {
    "comment": {
      "begin": "#",
      "end": "$",
      "name": "comment.line.number-sign.mc-lang"
    },
    "keys": {
      "name": "entity.other.attribute-name.keys.mc-lang",
      "begin": "^",
      "end": "[A-Za-z0-9](?==)|(?=#)",
      "patterns": [
        {
          "match": "[A-Za-z0-9]+:[A-Za-z0-9]+(?=\\.)",
          "name": "variable.other.readwrite.mc-lang"
        }
      ]
    },
    "values": {
      "begin": "\\=",
      "end": "$|(?=#)",
      "name": "keyword.operator.new.mc-lang",
      "patterns": [
        {
          "begin": "<",
          "end": ">|$",
          "name": "entity.name.function.values.mc-lang"
        },
        {
          "begin": ":_",
          "end": ":|$",
          "name": "constant.character.escape"
        },
        {
          "begin": "§",
          "end": "(?<=§)[0-9a-gk-or]{1}",
          "name": "entity.name.function.mc-lang",
          "patterns": [
            {
              "match": "§0",
              "name": "format.0.mc-lang"
            },
            {
              "match": "§1",
              "name": "format.1.mc-lang"
            },
            {
              "match": "§2",
              "name": "format.2.mc-lang"
            }
          ]
        },
        {
          "match": "%([1-9]+\\$)?(\\d)*(\\.(\\d)+)?[dcbsfexh]",
          "name": "entity.name.tag.values.mc-lang"
        },
        {
          "match": ".",
          "name": "string.mc-lang"
        }
      ]
    }
  }
}